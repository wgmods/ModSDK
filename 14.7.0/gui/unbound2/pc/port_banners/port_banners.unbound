		(macro SIMPLE_MOUSE_OVER_DOWN_SELECTED_COLORTRANSFORM_SCOPE)
		(macro MOUSE_HANDLER_SCOPE)

		(var eventHubSeasonWatcher:gfx = "$datahub.getFirstWatcher(CC.eventHubSeason)")
		(var eventHubSeasonEntity:gfx = "eventHubSeasonWatcher ? eventHubSeasonWatcher.entity : null" (event "eventHubSeasonWatcher.event"))

		(var unseenPhaseIdxList:gfx = "eventHubSeasonEntity	? eventHubSeasonEntity.eventHubSeason.unseenPhaseConfigIdxList
															: []" (event "eventHubSeasonEntity.eventHubSeason.evChanged"))
		(var isNarrativeAvailable:bool = "unseenPhaseIdxList.length > 0")

		(var containerImageName:str = "'banner_bg' + (_isSmall ? '_small' : '') + (isNarrativeAvailable ? '_reward': '')")
	)

	(bindcall externalCall 'direct.action' "[SC.Common.STATISTICS_EVENTS.LOG, [END_OF_WAR_STATISTICS.BANNER]]" init=false watch=false on=click)
	(bindcall externalCall "'inputMapping.onRequest'" "['openEndOfWarModal', {}]" init=false watch=false on=click)

	(style
		(width = 240px)
		(padding = "XS")
		(bind height "_isSmall ? 36px : 100px")
		(bind backgroundImage "'url:../events/end_of_war/banner/' + containerImageName + '.png'")
	)

	(block
		(style
			(position = "absolute") (bottom = 0)
			(width = 100%) (height = 28px)
			(padding = "S")
		)

		(controller $Instance renderer='BannerItemTitle'
			(args
				_title = "toUpper(tr('IDS_END_OF_WAR_TITLE'))"
				_textColor = "isNarrativeAvailable ? SC.Ui_styles.SERVICE_COLORS.YELLOW : SC.Ui_styles.SERVICE_COLORS.PAPER"
			)
		)
	)

	(block
		(bind visible "rollOver")

		(class $FullsizeAbsolute)
		(style (backgroundColor = "0x10FFFFFF"))
	)

	(macro MOUSE_HANDLER
		_soundSet = "'button_banner'"
	)

	(controller $Tooltip
		(bind renderer "'EndOfWarBannerTooltip'")
		(args
			_isNarrativeAvailable = "isNarrativeAvailable"
		)
		(macro DEFAULT_TOOLTIP_BEHAVIOUR "0")
	)
)
